<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ad.search.MainActivity"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="453dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="Wyszukiwanie rysunków w bazie KOTNIZ"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="253dp"
        android:layout_height="195dp"
        android:layout_weight="1"
        android:text="Wyszukaj skanując kod rysunku"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/secondBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.008"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="251dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:text="Wyszukaj wpisując numer rysunku"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/firstBtn"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.227"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/firstBtn"
        android:layout_toStartOf="@+id/firstBtn" />

    <Button
        android:id="@+id/secondBtn"
        android:layout_width="207dp"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:onClick="scanBar"
        android:text="@string/second"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstBtn"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/firstBtn"
        android:layout_alignStart="@+id/firstBtn"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/firstBtn"
        android:layout_width="208dp"
        android:layout_height="73dp"
        android:layout_weight="1"
        android:onClick="click"
        android:text="@string/first"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:fontFamily="serif"
        android:text="Created by Mateusz Dąbrowski"
        android:textColor="#9E9E9E"
        android:textSize="5sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/secondBtn"
        android:layout_alignEnd="@+id/secondBtn"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="29dp" />

    <Button
        android:id="@+id/kategorie"
        android:layout_width="450dp"
        android:onClick="dokategorii"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="Podział stoczni na kategorie" />

</RelativeLayout>
